<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/categoryItemId"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_space_half_8"
        android:layout_marginVertical="@dimen/main_space_half_8"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect"
        app:cardCornerRadius="@dimen/recycler_view_item_category_card_view_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_view_item_category_card_view_image_view_layout_height"
                android:scaleType="centerCrop"
                android:src="@drawable/burgers" />

            <TextView
                android:id="@+id/tvCategoryTitle"
                style="@style/StyleItemCategoryTextViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_space_half_8"
                tools:text="@string/category_item_burgers_title" />

            <TextView
                android:id="@+id/tvCategoryDescription"
                style="@style/StyleItemCategoryTextViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/main_space_half_8"
                tools:ignore="RtlSymmetry"
                tools:text="@string/category_item_burgers_description" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>