<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleDescription12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTitleRegular14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Style14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Style16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="StyleHeaderTextView">
        <item name="android:textAppearance">@style/StyleTitle20</item>
        <item name="android:textColor">@color/categories_tv_color</item>
    </style>

    <style name="StyleCategoryTextViewTitle">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:textColor">@color/categories_tv_color</item>
    </style>

    <style name="StyleCategoryTextViewDescription">
        <item name="android:textAppearance">@style/StyleDescription12</item>
        <item name="android:textColor">@color/item_category_tv_description_color</item>
    </style>

    <style name="StyleRecipeTextViewIngredient">
        <item name="android:textAppearance">@style/StyleTitleRegular14</item>
        <item name="android:textColor">@color/item_category_tv_description_color</item>
    </style>

    <style name="StyleRecipeTextViewMethod">
        <item name="android:textAppearance">@style/Style14</item>
        <item name="android:textColor">@color/item_category_tv_description_color</item>
    </style>

    <style name="StyleRecipeTextViewPortionsDescription">
        <item name="android:textAppearance">@style/Style16</item>
        <item name="android:textColor">@color/item_category_tv_description_color</item>
    </style>

    <style name="styleSeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

</resources>